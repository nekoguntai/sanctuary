{
  "name": "sanctuary-gateway",
  "version": "0.8.7",
  "description": "Public API gateway for Sanctuary mobile apps",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=junit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "http-proxy-middleware": "^2.0.6",
    "ws": "^8.14.2",
    "firebase-admin": "^12.0.0",
    "@parse/node-apn": "^6.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.16",
    "supertest": "^7.1.4",
    "typescript": "^5.3.2",
    "tsx": "^4.6.2",
    "vitest": "^4.0.16"
  }
}
