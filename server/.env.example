# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/sanctuary?schema=public"

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Encryption Key (for encrypting sensitive data like node passwords)
# Must be at least 32 characters. Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-encryption-key-at-least-32-characters-long

# Bitcoin Node Configuration
# Option 1: Bitcoin Core RPC
BITCOIN_RPC_HOST=localhost
BITCOIN_RPC_PORT=8332
BITCOIN_RPC_USER=your-rpc-username
BITCOIN_RPC_PASSWORD=your-rpc-password
BITCOIN_NETWORK=mainnet

# Option 2: Electrum Server
ELECTRUM_HOST=electrum.blockstream.info
ELECTRUM_PORT=50002
ELECTRUM_PROTOCOL=ssl

# Price Feed APIs
MEMPOOL_API=https://mempool.space/api/v1
COINGECKO_API=https://api.coingecko.com/api/v3
KRAKEN_API=https://api.kraken.com/0/public

# Optional: API Keys for rate limit increases
COINGECKO_API_KEY=
KRAKEN_API_KEY=
KRAKEN_API_SECRET=
