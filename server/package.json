{
  "name": "sanctuary-server",
  "version": "0.7.0-rc.1",
  "description": "Backend API server for Sanctuary Bitcoin Wallet",
  "main": "dist/index.js",
  "prisma": {
    "seed": "node --experimental-specifier-resolution=node dist/prisma/seed.js"
  },
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "tsx watch src/index.ts",
    "prebuild": "prisma generate",
    "build": "tsc",
    "start": "node dist/index.js",
    "pretest": "prisma generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:ci": "jest --ci --coverage",
    "test:bitcoin": "jest tests/unit/services/bitcoin",
    "test:pool": "jest tests/unit/services/bitcoin/electrumPool.test.ts tests/unit/services/bitcoin/nodeClient.test.ts",
    "test:api": "jest tests/unit/api",
    "test:security": "jest --testNamePattern='Authentication|Encryption|Two-Factor|Password'",
    "test:fast": "jest --onlyChanged",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "prepare": "cd .. && husky server/.husky",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "bitcoin",
    "wallet",
    "api",
    "sanctuary"
  ],
  "author": "riannom",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.2.4",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "tiny-secp256k1": "^2.2.3",
    "ws": "^8.15.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/qrcode": "^1.5.6",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "^4.0.16",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "prisma": "^5.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
